# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#GET           /                       controllers.Application.index
#POST          /                       controllers.Application.create

#GET           /:id                    controllers.Application.show(id: Int)
#POST          /:id                    controllers.Application.update(id: Int)
#DELETE        /:id                    controllers.Application.delete(id: Int)

# Home Page
GET            /                       controllers.Application.index

#GET            /subscription/new       controllers.Application.create
#POST           /subscription           controllers.Application.save

# Login Page
GET            /login                  controllers.AuthController.logIn()
GET            /callback               controllers.AuthController.callback(code: Option[String])
GET            /logout                 controllers.AuthController.logOut()

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file            controllers.Assets.versioned(path="/public", file: Asset)
